<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(badge) -%>">
  <span class='title'>
    <%= badge.title %>
    <% if badge.hidden? %><em>(hidden)</em><% end %>
  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_badges_admin_badge_path(badge),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.badges_admin_badge_path(badge),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => badge.title),
        :method => :delete %>
  </span>
</li>
